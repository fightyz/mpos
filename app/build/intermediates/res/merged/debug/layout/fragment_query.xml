<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:id="@+id/query_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="MPOS系统"
        android:textSize="30sp"/>
    
    <ScrollView 
        android:id="@+id/query_area_scroll"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/query_title"
        android:background="@drawable/query_gray_bk">
        
        <TextView 
            android:id="@+id/query_area_img"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
    
    <!-- <TextView 
        android:id="@+id/query_area_img"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_below="@id/query_title"
        android:layout_marginTop="30dp"
        android:background="@drawable/query_gray_bk"/> -->
    
    <TextView 
        android:id="@+id/info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/query_area_scroll"
        android:layout_below="@id/query_title"
        android:layout_marginTop="120dp"
        android:text="请将金融IC卡靠近手机背面的左边区域"
        android:textSize="20sp"/>

</RelativeLayout>
